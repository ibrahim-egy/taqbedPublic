<%- include('partials/header') %>

    <div class="jumbotron centered">
        <div class="container">
            <a class="btn btn-secondary btn-lg" href="/data" role="button" style="margin-bottom: 20px;">Back</a>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">National ID</th>
                        <th scope="col">Category</th>
                        <th scope="col">Amount/Year</th>
                        <th scope="col">Over View</th>
                    </tr>
                </thead>
                <tbody>
                    <% owners.forEach((owner, index)=> { %>
                        <tr>
                            <td class="td-left">
                                <%=index + 1%>
                            </td>
                            <td class="td-left">
                                <%=owner.name%>
                            </td>
                            <td class="td-left">
                                <%=owner.nationalId%>
                            </td>
                            <td class="td-left">
                                <%=owner.category%>
                            </td>
                            <td class="td-left">
                                <%=owner.amount%>
                            </td>
                            <td class="td-left">
                                <form action="/owner?name=<%=owner.name%>" method="post" style="margin: 0; padding: 0;">
                                    <button class="btn" type="submit" name="where" value="allOwnersPost" style="width: 60px;">
                                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    </button>
                                    <input type="hidden" value="<%=owner.id%>" name="id">
                                </form>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>

        </div>
    </div>

    <%- include('partials/footer') %>